<UserControl x:Class="Turnierplan_Software.Spielpaarungsbaustein_Minified"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Turnierplan_Software"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100" MaxHeight="60" MaxWidth="100">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Margin="0,20,0,0" Stroke="Black"/>
        <Separator Margin="1,20,1,0"/>
        <Label x:Name="label_team1" Content="{Binding Name_MannschaftA}" HorizontalAlignment="Left" Margin="0,16,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_team2" Content="{Binding Name_MannschaftB}" HorizontalAlignment="Left" Margin="0,36,0,-3" VerticalAlignment="Top" Height="27"/>
        <Label x:Name="label_name" Content="{Binding Name}" HorizontalAlignment="Left" Margin="0,-2,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
