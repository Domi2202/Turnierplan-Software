<Window x:Class="Turnierplan_Software.Veranstaltunsmanager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turnierplan_Software"
        mc:Ignorable="d"
        Title="Meine Veranstaltungen" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="button_laden" Content="Laden" Margin="180,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" Height="19" Click="button_laden_Click"/>
        <Button x:Name="button_loeschen" Content="Löschen" Margin="95,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" Click="button_loeschen_Click" Height="19"/>
        <ListBox x:Name="listBox_veranstaltungen" Margin="10,10,10,50"/>
        <Button x:Name="button_neu" Content="Erstellen" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="19" VerticalAlignment="Bottom" Click="button_neu_Click"/>
    </Grid>
</Window>
