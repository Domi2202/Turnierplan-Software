<Window x:Class="Turnierplan_Software.Teilnahmeregel_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turnierplan_Software"
        mc:Ignorable="d"
        Title="Teilnahmeregel hinzufügen" Height="250" Width="370" MinHeight="250" MinWidth="370" MaxWidth="350">
    <Grid Margin="0,0,-0.2,-0.2">
        <ItemsControl x:Name="panel_regeln" Margin="10,10,10.2,85" ItemsSource="{Binding Dialogfelder}"/>
        <Button x:Name="btn_ok" Content="Ok" HorizontalAlignment="Left" Margin="50,0,0,10" Width="75" Height="18" VerticalAlignment="Bottom" Click="btn_ok_Click"/>
        <Button x:Name="btn_cncl" Content="Fertig" HorizontalAlignment="Right" Margin="0,0,50,10" VerticalAlignment="Bottom" Width="75" Click="btn_cncl_Click"/>
        <Label x:Name="label_name" Content="Name der Regel:" HorizontalAlignment="Left" Margin="10,0,0,40" Width="128" Height="26" VerticalAlignment="Bottom"/>
        <TextBox x:Name="textBox_name" Margin="120,0,10,40.2" TextWrapping="Wrap" Height="23" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
