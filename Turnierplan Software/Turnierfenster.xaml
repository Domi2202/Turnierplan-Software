            <Button x:Name="button_generieren" Content="Generieren" Margin="10,0,204.8,10" RenderTransformOrigin="-0.016,0.405" Height="22" VerticalAlignment="Bottom"/>
        </Grid>
        <Grid x:Name="grid_mannschaftsdetails" Margin="0,0,0,0" HorizontalAlignment="Right" Width="344"/>
    </Grid>
</UserControl>
